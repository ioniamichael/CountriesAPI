<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ui.activities.MainActivity">


    <LinearLayout
        android:id="@+id/sort_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSortByName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:background="@drawable/button_style"
            android:stateListAnimator="@null"
            android:text="@string/sort_by_native_name"
            android:textAllCaps="false"
            android:translationZ="10dp" />

        <Button
            android:id="@+id/btnSortByArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:stateListAnimator="@null"
            android:text="@string/sort_by_area"
            android:textAllCaps="false"
            android:translationZ="10dp" />

    </LinearLayout>

    <FrameLayout
        android:padding="5dp"
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sort_buttons_container">

    </FrameLayout>

</RelativeLayout>